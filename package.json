{
  "name": "pizza-validator",
  "version": "1.0.0",
  "description": "A TypeScript package for validating pizza objects using Zod schemas",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "pizza-validator": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "pizza",
    "validation",
    "typescript",
    "zod"
  ],
  "author": "Emiljano Daku",
  "license": "ISC",
  "files": [
    "dist"
  ],
  "dependencies": {
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "8.46.2"
  }
}
